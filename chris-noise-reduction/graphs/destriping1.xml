<graph>
    <id>destriping</id>

    <node>
        <id>load</id>
        <operator>org.esa.beam.framework.gpf.operators.common.ReadProductOp$Spi</operator>
        <parameters>
            <filePath>${inputFile1}</filePath>
        </parameters>
    </node>

    <node>
        <id>destriping-factors</id>
        <operator>org.esa.beam.chris.operators.DestripingFactorsOp$Spi</operator>
        <sources>
            <input>load</input>
        </sources>
        <parameters>
            <smoothingOrder>27</smoothingOrder>
            <slitCorrection>true</slitCorrection>
        </parameters>
    </node>

    <node>
        <id>destriping</id>
        <operator>org.esa.beam.chris.operators.DestripingOp$Spi</operator>
        <sources>
            <input>load</input>
            <factors>destriping-factors</factors>
        </sources>
    </node>

    <node>
        <id>dropout-correction</id>
        <operator>org.esa.beam.chris.operators.DropoutCorrectionOp$Spi</operator>
        <sources>
            <input>destriping</input>
        </sources>
        <parameters>
            <neighborhoodType>4</neighborhoodType>
            <neighboringBandCount>5</neighboringBandCount>
        </parameters>
    </node>

    <node>
        <id>write</id>
        <operator>org.esa.beam.framework.gpf.operators.common.WriteProductOp$Spi</operator>
        <sources>
            <input>dropout-correction</input>
        </sources>
        <parameters>
            <filePath>${outputFile1}</filePath>
        </parameters>
    </node>

