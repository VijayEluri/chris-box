<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>chris-cloud-screening</symbolicName>
    <version>1.0-SNAPSHOT</version>
    <name>chris-cloud-screening</name>
    <description>CHRIS Cloud Screening Module</description>

    <vendor>Brockmann Consult GmbH</vendor>
    <contactAddress>Max Planck Str.2, 21502 Geesthacht (Germany)</contactAddress>
    <copyright>(C) 2007 by Brockmann Consult GmbH</copyright>
    <url>http://envisat.esa.int/beam</url>
    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>

    <dependency>
        <module>beam-gpf</module>
    </dependency>
    <dependency>
        <module>beam-chris-reader</module>
    </dependency>
    <dependency>
        <module>beam-visat</module>
        <optional>true</optional>
    </dependency>

    <categories>Application,Processor,CHRIS</categories>

    <extension point="beam-visat:actions">
        <action>
            <id>chrisCloudScreening</id>
            <class>org.esa.beam.chris.ui.CloudScreeningAction</class>
            <text>Cloud Screening (CHRIS)....</text>
            <shortDescr>Invoke the CHRIS Cloud Screening Tool.</shortDescr>
            <mnemonic></mnemonic>
            <parent>tools</parent>
            <helpID>chrisCloudScreeningTool</helpID>
            <placeAfter></placeAfter>
        </action>
    </extension>

    <extension point="beam-ui:helpSets">
        <helpSet>
            <parent>beam-help</parent>
            <path>doc/help/cloudscreening.hs</path>
        </helpSet>
    </extension>

</module>
