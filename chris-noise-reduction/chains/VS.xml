<graph>
    <id>VS</id>

    <node>
        <id>load</id>
        <operator>org.esa.beam.framework.gpf.operators.common.ReadProductOp$Spi</operator>
        <parameters>
            <filePath>${inputFile1}</filePath>
        </parameters>
    </node>

    <node>
        <id>vertical_striping</id>
        <operator>org.esa.beam.chris.operators.VerticalStripingCorrectionOperator$Spi</operator>
        <sources>
            <input>load</input>
        </sources>
        <parameters>
            <smoothingOrder>27</smoothingOrder>
        </parameters>
    </node>

    <node>
        <id>write</id>
        <operator>org.esa.beam.framework.gpf.operators.common.WriteProductOp$Spi</operator>
        <sources>
            <input>vertical_striping</input>
        </sources>
        <parameters>
            <filePath>${outputFile1}</filePath>
        </parameters>
    </node>

</graph>