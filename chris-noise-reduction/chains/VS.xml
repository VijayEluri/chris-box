<graph>
    <id>VS</id>

    <node>
        <id>load</id>
        <operator>org.esa.beam.framework.gpf.operators.common.ReadProductOp$Spi</operator>
        <parameters>
            <filePath>${inputFile1}</filePath>
        </parameters>
    </node>
    
    <node>
        <id>slit-correction</id>
        <operator>org.esa.beam.chris.operators.SlitCorrectionOperator$Spi</operator>
        <sources>
            <sourceProduct>load</sourceProduct>
        </sources>
    </node>

    <node>
        <id>vertical-striping-factors</id>
        <operator>org.esa.beam.chris.operators.VerticalStripingCorrectionOperator$Spi</operator>
        <sources>
            <input>slit-correction</input>
        </sources>
        <parameters>
            <smoothingOrder>27</smoothingOrder>
        </parameters>
    </node>

    <node>
        <id>apply</id>
        <operator>org.esa.beam.chris.operators.ApplyOperator$Spi</operator>
        <sources>
            <input>slit-correction</input>
            <factors>vertical-striping-factors</factors>
        </sources>
    </node>

    <node>
        <id>write</id>
        <operator>org.esa.beam.framework.gpf.operators.common.WriteProductOp$Spi</operator>
        <sources>
            <input>apply</input>
        </sources>
        <parameters>
            <filePath>${outputFile1}</filePath>
        </parameters>
    </node>

</graph>
        