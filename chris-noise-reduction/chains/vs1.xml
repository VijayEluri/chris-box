<graph>
    <id>vs-removal</id>

    <node>
        <id>load</id>
        <operator>org.esa.beam.framework.gpf.operators.common.ReadProductOp$Spi</operator>
        <parameters>
            <filePath>${inputFile1}</filePath>
        </parameters>
    </node>

    <node>
        <id>slit-correction</id>
        <operator>org.esa.beam.chris.operators.SlitCorrectionOperator$Spi</operator>
        <sources>
            <input>load</input>
        </sources>
    </node>

    <node>
        <id>vs-correction-factors</id>
        <operator>org.esa.beam.chris.operators.VsCorrectionFactorsOperator$Spi</operator>
        <sources>
            <input>slit-correction</input>
        </sources>
        <parameters>
            <smoothingOrder>27</smoothingOrder>
        </parameters>
    </node>

    <node>
        <id>vs-removal</id>
        <operator>org.esa.beam.chris.operators.VsRemovalOperator$Spi</operator>
        <sources>
            <input>slit-correction</input>
            <factors>vs-correction-factors</factors>
        </sources>
    </node>

    <node>
        <id>write</id>
        <operator>org.esa.beam.framework.gpf.operators.common.WriteProductOp$Spi</operator>
        <sources>
            <input>vs-removal</input>
        </sources>
        <parameters>
            <filePath>${outputFile1}</filePath>
        </parameters>
    </node>

</graph>
